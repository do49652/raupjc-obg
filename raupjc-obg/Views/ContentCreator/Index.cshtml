@model raupjc_obg.Models.ContentViewModels.GameViewModel
@{
    ViewData["Title"] = "Content Creator";
}

<h2>New Game</h2>

<div>
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label>Name:</label>
                <input class="form-control" type="text" name="Name" value="@Model.Name" />
            </div>

            <div class="form-group">
                <label>Description:</label>
                <input class="form-control" type="text" name="Description" value="@Model.Description" />
            </div>

            <div align="right">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>
