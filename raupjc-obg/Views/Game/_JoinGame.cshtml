@model raupjc_obg.Models.GameViewModels.JoinGameViewModel

<div class="col-md-4">
    <form method="post">
        <input name="Username" type="text" autocomplete="off" placeholder="Username" class="form-control">
        <input name="GameName" type="text" autocomplete="off" placeholder="Game name" class="form-control">
        <input name="Password" type="password" autocomplete="off" placeholder="Password" class="form-control">
        <div align="right">
            <button type="submit" class="btn btn-primary">Join</button>
        </div>
    </form>
</div>